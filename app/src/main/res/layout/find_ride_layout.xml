<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >

<Button
    android:layout_width="200dp"
    android:layout_height="128dp"
    android:background="@drawable/car"
    android:id="@+id/play_btn"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:layout_margin="40dp"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FIND RIDE"
        android:layout_margin="20dp"
        style="@style/Hyperlink"
        android:layout_below="@+id/play_btn"
        android:textColor="#000"
        android:id="@+id/ride_text"
        android:textSize="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ride_text"
        android:text="FROM"
        android:textSize="20dp"
        android:textColor="#000"
        android:id="@+id/from_find_text"
        android:layout_margin="20dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/from_find_text"
        android:layout_below="@+id/ride_text"
        android:id="@+id/from_edit"
        android:layout_marginTop="10dp"
        android:layout_marginRight="100dp"
        android:hint="Enter Location"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ccc"
        android:id="@+id/first_view1"
        android:layout_below="@+id/from_edit"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="100dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_view1"
        android:text="TO"
        android:textSize="20dp"
        android:textColor="#000"
        android:id="@+id/to_text"
        android:layout_margin="20dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/from_find_text"
        android:layout_below="@+id/first_view1"
        android:id="@+id/from_edit1"
        android:layout_marginTop="10dp"
        android:layout_marginRight="100dp"
        android:hint="Enter Destination"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ccc"
        android:id="@+id/first_view"
        android:layout_below="@+id/from_edit1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="100dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_view"
        android:background="#36dcce"
        android:text="SEARCH"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/button" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/switc1111"
        android:background="@drawable/updown"
        android:padding="5dp"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/from_find_text"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:layout_marginTop="18dp" />

</RelativeLayout>